{
    "name": "@monorepo/ui",
    "version": "0.0.1",
    "source": "src/index.tsx",
    "main": "./src/index.tsx",
    "module": "./src/index.tsx",
    "types": "./src/index.tsx",
    "sideEffects": [
        "**/*.css"
    ],
    "exports": {
        ".": {
            "import": "./src/index.tsx",
            "require": "./src/index.tsx",
            "types": "./src/index.tsx"
        },
        "./src/*": "./src/*",
        "./styles.css": "./src/styles/global.css.ts"
    },
    "scripts": {
        "build": "tsup src/index.tsx --format cjs,esm --dts --external react --target=es2019",
        "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --watch --target=es2019"
    },
    "dependencies": {
        "@vanilla-extract/css": "^1.14.0",
        "@vanilla-extract/recipes": "^0.5.1"
    },
    "devDependencies": {
        "@swc/core": "^1.3.96",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vanilla-extract/esbuild-plugin": "^2.3.1",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
